{
  "editor.indentSize": 2,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit",
    "source.organizeImports": "explicit",
    "source.addMissingImports": "always"
  },
  "[javascript][typescript][javascriptreact][typescriptreact][json][jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "biome.lspBin": "./node_modules/.bin/biome",
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.fixAll": "always",
      "source.organizeImports": "always"
    }
  },
  "ruff.linting.enabled": true,
  "ruff.configPath": "${workspaceFolder}/pyproject.toml",
  "ruff.configSource": "filesystemFirst"
}
